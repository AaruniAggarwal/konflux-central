  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["main","rhoai-2.20", "rhoai-2.21"],
  "enabledManagers": ["tekton"],
  "tekton": {
    "schedule": ["at any time"],
    "fileMatch": ["\\.yaml$", "\\.yml$"], 
    "includePaths": ["pipelineruns/**", "pipelines/**", "tasks/**"], 
    "automerge": true 
  }
}
